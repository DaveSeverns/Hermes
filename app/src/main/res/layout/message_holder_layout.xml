<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sender_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sender_here"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/image_sent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                app:srcCompat="@drawable/hermes2" />

        </RelativeLayout>

        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/body_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="BubbleTextVew"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:angle="8dp"
            app:arrowHeight="10dp"
            app:arrowLocation="left"
            app:arrowPosition="14dp"
            app:arrowWidth="8dp"
            app:bubbleColor="#8A08C5" />

        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/body_text_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="BubbleTextVew"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:visibility="gone"
            app:angle="8dp"
            app:arrowHeight="10dp"
            app:arrowLocation="left"
            app:arrowPosition="14dp"
            app:arrowWidth="8dp"
            app:bubbleColor="#f2f4f4" />

    </LinearLayout>

</LinearLayout>