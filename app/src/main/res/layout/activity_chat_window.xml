<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChatWindowActivity"
    xmlns:chatview="http://schemas.android.com/apk/res-auto">

    <co.intentservice.chatui.ChatView
        android:id="@+id/chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        chatview:backgroundColor="@color/lightGray"
        chatview:inputBackgroundColor="@color/off_white"
        chatview:inputTextSize="20dp"
        chatview:inputUseEditorAction="true"
        chatview:bubbleElevation="elevated"
        chatview:bubbleBackgroundRcv="@color/lightGray"
        chatview:bubbleBackgroundSend="@color/lightGray" />


</LinearLayout>